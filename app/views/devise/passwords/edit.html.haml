.onboarding-wrapper
  = render "devise/shared/error_messages"

  .form-container
    %a{href: root_path}
      %img.logo{src: asset_path("logo.png") }

    = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: "std-box justify-self-right fix-height form-wrapper"}) do |f|
      .head
        %h2= t("users.passwords.edit.title")
        %p.instructions= t("users.passwords.edit.instructions.html")

      .inputs
        = f.hidden_field :reset_password_token

        .input-wrapper
          = f.label :password, t("users.passwords.edit.labels.new_password")
          = render "atoms/stateful_input", name: "user[password]", autoComplete: "new-password", autoFocus: true, type: "password"

        .input-wrapper
          = f.label :password_confirmation, t("users.passwords.edit.labels.confirm_password")
          = render "atoms/stateful_input", name: "user[password_confirmation]", autoComplete: "off", type: "password"
      .bottom
        = f.submit t("users.passwords.edit.actions.change"), class: "button-primary"

  .big-instructions-box
    %h1= t("users.passwords.edit.big_box.title.html")
    %p= t("users.passwords.edit.big_box.text.html")
