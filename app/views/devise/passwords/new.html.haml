.onboarding-wrapper
  .form-container
    %img.logo{src: asset_path("logo.png") }

    = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "std-box justify-self-right fix-height form-wrapper"}) do |f|
      .head
        %h2 Reset password
        %p.instructions Please write your email and we will send <br> you an email to recover your password

      .inputs
        .input-wrapper
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email"
      .bottom
        = f.submit "Reset", class: "button-primary"

  .big-instructions-box
    %h1
      No
      %strong worries!
    %p We will recover your password <br> in just a click
